<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/atp__activity_player_layout_help_call_audience_background"
              android:layout_width="300dp"
              android:layout_height="300dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:background="#FFEB3B"
                  android:layout_height="0dp">
        <TextView android:layout_width="wrap_content"
                  android:text="Ý Kiến Chuyên Gia"
                  android:textColor="@android:color/black"
                  android:textSize="30dp"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:padding="15dp"
                    android:layout_height="0dp">
        <ImageView
                android:id="@+id/call_axtanh"
                android:src="@drawable/anhxtanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/call_khongminh"
                android:src="@drawable/khongminh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/call_ngobaochau"/>
        <ImageView
                android:id="@+id/call_levanlan"
                android:src="@drawable/levanlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>
        <ImageView
                android:id="@+id/call_ngobaochau"
                android:src="@drawable/ngobaochau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Theo tôi đáp án là D"
                  android:textColor="#FFEB3B"
                  android:textSize="30dp"
                  android:id="@+id/dap_an_goi_dien"
                  android:layout_height="wrap_content" android:layout_centerVertical="true"
                  android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="0.7">
        <TextView android:id="@+id/bt_Ok"
                  android:layout_width="match_parent"
                  android:text="OK"
                  android:textColor="#FFFFFF"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>