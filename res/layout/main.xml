        <TextView
                android:id="@+id/tv_money_question_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="07  6.000.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="06  3.000.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="05  2.000.000"
                android:textColor="#CDDC39"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="04  1.000.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="03  600.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="02  400.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="01  200.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

    </LinearLayout>


</RelativeLayout>


