<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/atp__activity_loading_challenge_background"
>
    <LinearLayout
            android:id="@+id/right_to_left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
    >
        <RelativeLayout android:layout_width="match_parent"
                        android:background="#3E2723"
                        android:layout_height="0dp"
                        android:layout_weight="1">
            <ImageView android:id="@+id/iv_User"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:scaleType="centerInside"
                       android:layout_alignParentLeft="true"
                       android:src="@drawable/ic_no_avatar"/>
            <ProgressBar android:id="@+id/progressBar"
                         android:secondaryProgress="0"
                         android:max="30"
                         style="@android:style/Widget.ProgressBar.Large"
                         android:indeterminate="false"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_CountDownTimer"
                      android:layout_width="wrap_content"
                      android:text="30"
                      android:textSize="15sp"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/progressBar"
                      android:layout_alignLeft="@+id/progressBar"
                      android:layout_alignTop="@+id/progressBar"
                      android:layout_alignRight="@+id/progressBar"/>
            <ImageView android:id="@+id/iv_Money"
                       android:layout_width="wrap_content"
                       android:src="@drawable/img_money"
                       android:layout_toLeftOf="@+id/tv_MoneyAmount"
                       android:layout_height="match_parent"/>
            <TextView android:id="@+id/tv_MoneyAmount"
                      android:text="5000"
                      android:gravity="center"
                      android:textColor="#FFFFFF"
                      android:textSize="20dp"
                      android:textStyle="bold"
                      android:layout_alignParentRight="true"
                      android:layout_width="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="10dp"
                      android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:background="@drawable/atp__activity_player_background"
                      android:layout_height="0dp"
                      android:layout_weight="13">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal"
                          android:layout_height="0dp"
                          android:layout_weight="1"
            >
                <ImageView android:id="@+id/bt_HelpStop"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:scaleType="centerInside"
                           android:src="@drawable/atp__activity_player_button_image_help_stop"
                           android:layout_height="match_parent"/>
                <ImageView android:id="@+id/bt_HelpChangeQuestion"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:scaleType="centerInside"
                           android:src="@drawable/atp__activity_player_button_image_help_change_question"
                           android:layout_height="match_parent"/>
                <ImageView android:id="@+id/bt_Help5050"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:src="@drawable/atp__activity_player_button_image_help_5050"
                           android:scaleType="centerInside"
                           android:layout_height="match_parent"/>
                <ImageView android:id="@+id/bt_HelpAudience"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:src="@drawable/atp__activity_player_button_image_help_audience"
                           android:scaleType="centerInside"
                           android:layout_height="match_parent"/>
                <ImageView android:id="@+id/bt_HelpCall"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:scaleType="centerInside"
                           android:src="@drawable/atp__activity_player_button_image_help_call"
                           android:layout_height="match_parent"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="4"
            >
                <TextView android:id="@+id/tv_ContentQuestion"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:textColor="#2196F3"
                          android:layout_width="match_parent"
                          android:textStyle="bold"
                          android:textSize="20sp"
                          android:layout_alignParentTop="true"
                          android:gravity="center"
                          android:text="Công ty BMW chuyên sản xuất mạt hàng gì"
                          android:background="@drawable/atp__activity_player_layout_play_question_background"
                          android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tv_QuestionNumber"
                          android:layout_width="wrap_content"
                          android:layout_height="30dp"
                          android:layout_alignParentTop="true"
                          android:text="Câu 1"
                          android:textStyle="bold"
                          android:textSize="20sp"
                          android:textColor="#673AB7"
                          android:gravity="center"
                          android:layout_centerHorizontal="true"
                          android:background="@drawable/atp__activity_player_layout_play_order_question"/>

            </RelativeLayout>
            <LinearLayout android:layout_below="@+id/tv_ContentAnswer"
                          android:layout_width="300dp"
                          android:layout_gravity="center"
                          android:orientation="vertical"

                          android:layout_height="0dp"
                          android:layout_weight="5">
                <TextView android:id="@+id/bt_CaseA"
                          android:textStyle="bold"
                          android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                          android:layout_width="wrap_content"
                          android:layout_height="0dp"
                          android:textSize="20dp"
                          android:textColor="#FFFFFF"
                          android:gravity="center"
                          android:text="A:Ô tô hạng sang"
                          android:layout_weight="1"/>
                <TextView android:id="@+id/bt_CaseB"
                          android:textStyle="bold"
                          android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:textSize="20dp"
                          android:textColor="#FFFFFF"
                          android:gravity="center"
                          android:text="A:Ô tô hạng sang"
                          android:layout_weight="1"/>
                <TextView android:id="@+id/bt_CaseC"
                          android:textStyle="bold"
                          android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:textSize="20dp"
                          android:textColor="#FFFFFF"
                          android:gravity="center"
                          android:text="A:Ô tô hạng sang"
                          android:layout_weight="1"/>
                <TextView android:id="@+id/bt_CaseD"
                          android:textStyle="bold"
                          android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                          android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:textSize="20dp"
                          android:textColor="#FFFFFF"
                          android:gravity="center"
                          android:text="A:Ô tô hạng sang"
                          android:layout_weight="1"/>

            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                            android:layout_weight="1"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/lv_Price"
                  android:visibility="visible"
                  android:layout_width="match_parent"
                  android:background="@drawable/atp__activity_player_layout_money_background"
                  android:layout_alignParentLeft="true"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/tv_money_question_15"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="15  150.000.000"
                android:textColor="#CDDC39"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_14"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="14  85.000.000"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_money_question_13"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="13  60.000.000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18dp"/>

        <TextView
